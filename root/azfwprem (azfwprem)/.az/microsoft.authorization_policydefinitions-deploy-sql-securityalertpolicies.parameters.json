{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "name": "Deploy-Sql-SecurityAlertPolicies",
        "type": "microsoft.authorization/policydefinitions",
        "kind": "policydefinitions",
        "location": "global",
        "properties": {
          "description": "Deploy the security Alert Policies configuration with email admin accounts when it not exist in current configuration",
          "displayName": "Deploy SQL Database security Alert Policies configuration with email admin accounts",
          "parameters": {
            "effect": {
              "allowedValues": [
                "DeployIfNotExists",
                "Disabled"
              ],
              "defaultValue": "DeployIfNotExists",
              "metadata": {
                "description": "Enable or disable the execution of the policy",
                "displayName": "Effect"
              },
              "type": "String"
            }
          },
          "policyRule": {
            "then": {
              "effect": "[parameters('effect')]",
              "details": {
                "type": "Microsoft.Sql/servers/databases/securityAlertPolicies",
                "existenceCondition": {
                  "allOf": [
                    {
                      "field": "Microsoft.Sql/servers/databases/securityAlertPolicies/state",
                      "equals": "Enabled"
                    }
                  ]
                },
                "roleDefinitionIds": [
                  "/providers/Microsoft.Authorization/roleDefinitions/056cd41c-7e88-42e1-933e-88ba6a50c9c3"
                ],
                "deployment": {
                  "properties": {
                    "parameters": {
                      "location": {
                        "value": "[field('location')]"
                      },
                      "sqlServerDataBaseName": {
                        "value": "[field('name')]"
                      },
                      "sqlServerName": {
                        "value": "[first(split(field('fullname'),'/'))]"
                      }
                    },
                    "mode": "Incremental",
                    "template": {
                      "parameters": {
                        "location": {
                          "type": "String"
                        },
                        "sqlServerDataBaseName": {
                          "type": "String"
                        },
                        "sqlServerName": {
                          "type": "String"
                        }
                      },
                      "contentVersion": "1.0.0.0",
                      "resources": [
                        {
                          "type": "Microsoft.Sql/servers/databases/securityAlertPolicies",
                          "properties": {
                            "emailAccountAdmins": true,
                            "retentionDays": 0,
                            "emailAddresses": [
                              "admin@contoso.com"
                            ],
                            "state": "Enabled",
                            "disabledAlerts": []
                          },
                          "apiVersion": "2018-06-01-preview",
                          "name": "[concat(parameters('sqlServerName'),'/',parameters('sqlServerDataBaseName'),'/default')]"
                        }
                      ],
                      "variables": {},
                      "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                      "outputs": {}
                    }
                  }
                }
              }
            },
            "if": {
              "field": "type",
              "equals": "Microsoft.Sql/servers/databases"
            }
          },
          "mode": "Indexed"
        }
      }
    }
  }
}
