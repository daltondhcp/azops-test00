{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "name": "Deploy-VNET-HubSpoke",
        "type": "microsoft.authorization/policydefinitions",
        "kind": "policydefinitions",
        "location": "global",
        "properties": {
          "parameters": {
            "vNetPeerUseRemoteGateway": {
              "defaultValue": false,
              "metadata": {
                "description": "Enable gateway transit for the LZ network",
                "displayName": "vNetPeerUseRemoteGateway"
              },
              "type": "Boolean"
            },
            "vNetCidrRange": {
              "metadata": {
                "description": "CIDR Range for the vNet",
                "displayName": "vNetCidrRange"
              },
              "type": "String"
            },
            "hubResourceId": {
              "metadata": {
                "description": "Resource ID for the HUB vNet",
                "displayName": "hubResourceId"
              },
              "type": "String"
            },
            "vNetLocation": {
              "metadata": {
                "description": "Location for the vNet",
                "displayName": "vNetLocation"
              },
              "type": "String"
            },
            "vNetRgName": {
              "metadata": {
                "description": "Name of the landing zone vNet RG",
                "displayName": "vNetRgName"
              },
              "type": "String"
            },
            "dnsServers": {
              "defaultValue": [],
              "metadata": {
                "description": "Default domain servers for the vNET.",
                "displayName": "DNSServers"
              },
              "type": "Array"
            },
            "vNetName": {
              "metadata": {
                "description": "Name of the landing zone vNet",
                "displayName": "vNetName"
              },
              "type": "String"
            }
          },
          "description": "This policy deploys virtual network and peer to the hub",
          "displayName": "Deploy Virtual Network with peering to the hub",
          "policyRule": {
            "then": {
              "effect": "deployIfNotExists",
              "details": {
                "type": "Microsoft.Network/virtualNetworks",
                "roleDefinitionIds": [
                  "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"
                ],
                "existenceCondition": {
                  "allOf": [
                    {
                      "field": "name",
                      "like": "[parameters('vNetName')]"
                    },
                    {
                      "field": "location",
                      "equals": "[parameters('vNetLocation')]"
                    }
                  ]
                },
                "name": "[parameters('vNetName')]",
                "deployment": {
                  "properties": {
                    "parameters": {
                      "vNetPeerUseRemoteGateway": {
                        "value": "[parameters('vNetPeerUseRemoteGateway')]"
                      },
                      "vNetCidrRange": {
                        "value": "[parameters('vNetCidrRange')]"
                      },
                      "hubResourceId": {
                        "value": "[parameters('hubResourceId')]"
                      },
                      "vNetLocation": {
                        "value": "[parameters('vNetLocation')]"
                      },
                      "vNetRgName": {
                        "value": "[parameters('vNetRgName')]"
                      },
                      "dnsServers": {
                        "value": "[parameters('dnsServers')]"
                      },
                      "vNetName": {
                        "value": "[parameters('vNetName')]"
                      }
                    },
                    "mode": "Incremental",
                    "template": {
                      "parameters": {
                        "vNetPeerUseRemoteGateway": {
                          "defaultValue": false,
                          "type": "bool"
                        },
                        "vNetCidrRange": {
                          "type": "String"
                        },
                        "hubResourceId": {
                          "type": "String"
                        },
                        "vNetLocation": {
                          "type": "String"
                        },
                        "vNetRgName": {
                          "type": "String"
                        },
                        "dnsServers": {
                          "defaultValue": [],
                          "type": "Array"
                        },
                        "vNetName": {
                          "type": "String"
                        }
                      },
                      "contentVersion": "1.0.0.0",
                      "resources": [
                        {
                          "type": "Microsoft.Resources/deployments",
                          "properties": {
                            "mode": "Incremental",
                            "template": {
                              "parameters": {},
                              "contentVersion": "1.0.0.0",
                              "resources": [
                                {
                                  "type": "Microsoft.Resources/resourceGroups",
                                  "properties": {},
                                  "location": "[parameters('vNetLocation')]",
                                  "name": "[parameters('vNetRgName')]",
                                  "apiVersion": "2021-04-01T00:00:00Z"
                                }
                              ],
                              "variables": {},
                              "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                              "outputs": {}
                            }
                          },
                          "location": "[parameters('vNetLocation')]",
                          "name": "[concat('es-lz-vnet-',substring(uniqueString(subscription().id),0,6),'-rg')]",
                          "apiVersion": "2021-04-01T00:00:00Z",
                          "dependsOn": []
                        },
                        {
                          "resourceGroup": "[parameters('vNetRgName')]",
                          "type": "Microsoft.Resources/deployments",
                          "properties": {
                            "mode": "Incremental",
                            "template": {
                              "parameters": {},
                              "contentVersion": "1.0.0.0",
                              "resources": [
                                {
                                  "type": "Microsoft.Network/virtualNetworks",
                                  "properties": {
                                    "addressSpace": {
                                      "addressPrefixes": [
                                        "[parameters('vNetCidrRange')]"
                                      ]
                                    },
                                    "dhcpOptions": {
                                      "dnsServers": "[parameters('dnsServers')]"
                                    }
                                  },
                                  "location": "[parameters('vNetLocation')]",
                                  "name": "[parameters('vNetName')]",
                                  "apiVersion": "2021-02-01T00:00:00Z",
                                  "dependsOn": []
                                },
                                {
                                  "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
                                  "properties": {
                                    "remoteVirtualNetwork": {
                                      "id": "[parameters('hubResourceId')]"
                                    },
                                    "allowVirtualNetworkAccess": true,
                                    "allowForwardedTraffic": true,
                                    "allowGatewayTransit": false,
                                    "useRemoteGateways": "[parameters('vNetPeerUseRemoteGateway')]"
                                  },
                                  "name": "[concat(parameters('vNetName'), '/peerToHub')]",
                                  "apiVersion": "2021-02-01T00:00:00Z",
                                  "dependsOn": [
                                    "[parameters('vNetName')]"
                                  ]
                                },
                                {
                                  "subscriptionId": "[split(parameters('hubResourceId'),'/')[2]]",
                                  "resourceGroup": "[split(parameters('hubResourceId'),'/')[4]]",
                                  "type": "Microsoft.Resources/deployments",
                                  "properties": {
                                    "parameters": {
                                      "remoteVirtualNetwork": {
                                        "value": "[concat(subscription().id,'/resourceGroups/',parameters('vNetRgName'), '/providers/','Microsoft.Network/virtualNetworks/', parameters('vNetName'))]"
                                      },
                                      "hubName": {
                                        "value": "[split(parameters('hubResourceId'),'/')[8]]"
                                      }
                                    },
                                    "mode": "Incremental",
                                    "template": {
                                      "parameters": {
                                        "remoteVirtualNetwork": {
                                          "defaultValue": false,
                                          "type": "String"
                                        },
                                        "hubName": {
                                          "defaultValue": false,
                                          "type": "String"
                                        }
                                      },
                                      "contentVersion": "1.0.0.0",
                                      "resources": [
                                        {
                                          "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
                                          "properties": {
                                            "remoteVirtualNetwork": {
                                              "id": "[[parameters('remoteVirtualNetwork')]"
                                            },
                                            "allowVirtualNetworkAccess": true,
                                            "allowForwardedTraffic": true,
                                            "allowGatewayTransit": true,
                                            "useRemoteGateways": false
                                          },
                                          "name": "[[concat(parameters('hubName'),'/',last(split(parameters('remoteVirtualNetwork'),'/')))]",
                                          "apiVersion": "2021-02-01T00:00:00Z"
                                        }
                                      ],
                                      "variables": {},
                                      "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                                      "outputs": {}
                                    },
                                    "expressionEvaluationOptions": {
                                      "scope": "inner"
                                    }
                                  },
                                  "name": "[concat('es-lz-hub-',substring(uniqueString(subscription().id),0,6),'-peering')]",
                                  "apiVersion": "2021-04-01T00:00:00Z",
                                  "dependsOn": [
                                    "[parameters('vNetName')]"
                                  ]
                                }
                              ],
                              "variables": {},
                              "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                              "outputs": {}
                            }
                          },
                          "name": "[concat('es-lz-vnet-',substring(uniqueString(subscription().id),0,6))]",
                          "apiVersion": "2021-04-01T00:00:00Z",
                          "dependsOn": [
                            "[concat('es-lz-vnet-',substring(uniqueString(subscription().id),0,6),'-rg')]"
                          ]
                        }
                      ],
                      "variables": {},
                      "$schema": "http://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json",
                      "outputs": {}
                    }
                  },
                  "location": "northeurope"
                },
                "deploymentScope": "Subscription",
                "existenceScope": "ResourceGroup",
                "ResourceGroupName": "[parameters('vNetRgName')]"
              }
            },
            "if": {
              "allOf": [
                {
                  "field": "type",
                  "equals": "Microsoft.Resources/subscriptions"
                }
              ]
            }
          },
          "mode": "All"
        }
      }
    }
  }
}
