{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "name": "Deploy-ASC-Defender-ARM",
        "type": "microsoft.authorization/policydefinitions",
        "kind": "policydefinitions",
        "location": "global",
        "properties": {
          "description": "Deploy the Azure Defender settings for Azure Resource Manager",
          "displayName": "Deploy Azure Defender for ARM",
          "parameters": {
            "effect": {
              "allowedValues": [
                "DeployIfNotExists",
                "Disabled"
              ],
              "defaultValue": "DeployIfNotExists",
              "metadata": {
                "description": "Enable or disable the execution of the policy",
                "displayName": "Effect"
              },
              "type": "string"
            },
            "pricingTier": {
              "allowedValues": [
                "Standard",
                "Free"
              ],
              "defaultValue": "Standard",
              "metadata": {
                "description": "Azure Defender pricing tier",
                "displayName": "Azure Defender pricing tier"
              },
              "type": "string"
            }
          },
          "policyRule": {
            "then": {
              "effect": "[parameters('effect')]",
              "details": {
                "type": "Microsoft.Security/pricings",
                "existenceCondition": {
                  "allOf": [
                    {
                      "field": "Microsoft.Security/pricings/pricingTier",
                      "equals": "[parameters('pricingTier')]"
                    },
                    {
                      "field": "type",
                      "equals": "Microsoft.Security/pricings"
                    }
                  ]
                },
                "roleDefinitionIds": [
                  "/providers/Microsoft.Authorization/roleDefinitions/fb1c8493-542b-48eb-b624-b4c8fea62acd"
                ],
                "deployment": {
                  "properties": {
                    "parameters": {
                      "pricingTier": {
                        "value": "[parameters('pricingTier')]"
                      }
                    },
                    "mode": "incremental",
                    "template": {
                      "parameters": {
                        "pricingTier": {
                          "metadata": {
                            "description": "Azure Defender pricing tier"
                          },
                          "type": "string"
                        }
                      },
                      "contentVersion": "1.0.0.0",
                      "resources": [
                        {
                          "type": "Microsoft.Security/pricings",
                          "properties": {
                            "pricingTier": "[parameters('pricingTier')]"
                          },
                          "apiVersion": "2018-06-01T00:00:00Z",
                          "name": "Arm"
                        }
                      ],
                      "variables": {},
                      "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                      "outputs": {}
                    }
                  },
                  "location": "northeurope"
                },
                "name": "Arm",
                "deploymentScope": "Subscription",
                "existenceScope": "Subscription"
              }
            },
            "if": {
              "allOf": [
                {
                  "field": "type",
                  "equals": "Microsoft.Resources/subscriptions"
                }
              ]
            }
          },
          "mode": "All"
        }
      }
    }
  }
}
