{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "name": "Deploy-Sql-AuditingSettings",
        "type": "microsoft.authorization/policydefinitions",
        "kind": "policydefinitions",
        "location": "global",
        "properties": {
          "description": "Deploy auditing settings to SQL Database when it not exist in the deployment",
          "displayName": "Deploy SQL database auditing settings",
          "parameters": {
            "effect": {
              "allowedValues": [
                "DeployIfNotExists",
                "Disabled"
              ],
              "defaultValue": "DeployIfNotExists",
              "metadata": {
                "description": "Enable or disable the execution of the policy",
                "displayName": "Effect"
              },
              "type": "String"
            }
          },
          "policyRule": {
            "then": {
              "effect": "[parameters('effect')]",
              "details": {
                "type": "Microsoft.Sql/servers/databases/auditingSettings",
                "existenceCondition": {
                  "allOf": [
                    {
                      "field": "Microsoft.Sql/servers/databases/auditingSettings/state",
                      "equals": "enabled"
                    },
                    {
                      "field": "Microsoft.Sql/servers/databases/auditingSettings/isAzureMonitorTargetEnabled",
                      "equals": "true"
                    }
                  ]
                },
                "roleDefinitionIds": [
                  "/providers/Microsoft.Authorization/roleDefinitions/056cd41c-7e88-42e1-933e-88ba6a50c9c3"
                ],
                "name": "default",
                "deployment": {
                  "properties": {
                    "parameters": {
                      "location": {
                        "value": "[field('location')]"
                      },
                      "sqlServerDataBaseName": {
                        "value": "[field('name')]"
                      },
                      "sqlServerName": {
                        "value": "[first(split(field('fullname'),'/'))]"
                      }
                    },
                    "mode": "Incremental",
                    "template": {
                      "parameters": {
                        "location": {
                          "type": "String"
                        },
                        "sqlServerDataBaseName": {
                          "type": "String"
                        },
                        "sqlServerName": {
                          "type": "String"
                        }
                      },
                      "contentVersion": "1.0.0.0",
                      "resources": [
                        {
                          "type": "Microsoft.Sql/servers/databases/auditingSettings",
                          "properties": {
                            "isAzureMonitorTargetEnabled": true,
                            "state": "enabled",
                            "auditActionsAndGroups": [
                              "BATCH_COMPLETED_GROUP",
                              "DATABASE_OBJECT_CHANGE_GROUP",
                              "SCHEMA_OBJECT_CHANGE_GROUP",
                              "BACKUP_RESTORE_GROUP",
                              "APPLICATION_ROLE_CHANGE_PASSWORD_GROUP",
                              "DATABASE_PRINCIPAL_CHANGE_GROUP",
                              "DATABASE_PRINCIPAL_IMPERSONATION_GROUP",
                              "DATABASE_ROLE_MEMBER_CHANGE_GROUP",
                              "USER_CHANGE_PASSWORD_GROUP",
                              "DATABASE_OBJECT_OWNERSHIP_CHANGE_GROUP",
                              "DATABASE_OBJECT_PERMISSION_CHANGE_GROUP",
                              "DATABASE_PERMISSION_CHANGE_GROUP",
                              "SCHEMA_OBJECT_PERMISSION_CHANGE_GROUP",
                              "SUCCESSFUL_DATABASE_AUTHENTICATION_GROUP",
                              "FAILED_DATABASE_AUTHENTICATION_GROUP"
                            ]
                          },
                          "apiVersion": "2017-03-01-preview",
                          "name": "[concat( parameters('sqlServerName'),'/',parameters('sqlServerDataBaseName'),'/default')]"
                        }
                      ],
                      "variables": {},
                      "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                      "outputs": {}
                    }
                  }
                }
              }
            },
            "if": {
              "field": "type",
              "equals": "Microsoft.Sql/servers/databases"
            }
          },
          "mode": "Indexed"
        }
      }
    }
  }
}
