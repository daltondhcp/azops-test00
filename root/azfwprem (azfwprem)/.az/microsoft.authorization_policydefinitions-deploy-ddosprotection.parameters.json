{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "name": "Deploy-DDoSProtection",
        "type": "microsoft.authorization/policydefinitions",
        "kind": "policydefinitions",
        "location": "global",
        "properties": {
          "parameters": {
            "effect": {
              "allowedValues": [
                "DeployIfNotExists",
                "Disabled"
              ],
              "defaultValue": "DeployIfNotExists",
              "metadata": {
                "description": "Enable or disable the execution of the policy",
                "displayName": "Effect"
              },
              "type": "String"
            },
            "rgName": {
              "metadata": {
                "description": "Provide name for resource group.",
                "displayName": "rgName"
              },
              "type": "String"
            },
            "ddosRegion": {
              "metadata": {
                "description": "DDoSVnet location",
                "displayName": "ddosRegion",
                "strongType": "location"
              },
              "type": "String"
            },
            "ddosName": {
              "metadata": {
                "description": "DDoSVnet",
                "displayName": "ddosName"
              },
              "type": "String"
            }
          },
          "description": "Deploys an Azure DDoS Protection Standard plan",
          "displayName": "Deploy an Azure DDoS Protection Standard plan",
          "policyRule": {
            "then": {
              "effect": "[parameters('effect')]",
              "details": {
                "type": "Microsoft.Network/ddosProtectionPlans",
                "roleDefinitionIds": [
                  "/providers/Microsoft.Authorization/roleDefinitions/4d97b98b-1d4f-4787-a291-c67834d212e7"
                ],
                "name": "[parameters('ddosName')]",
                "deployment": {
                  "properties": {
                    "parameters": {
                      "rgName": {
                        "value": "[parameters('rgName')]"
                      },
                      "ddosname": {
                        "value": "[parameters('ddosname')]"
                      },
                      "ddosregion": {
                        "value": "[parameters('ddosRegion')]"
                      }
                    },
                    "mode": "Incremental",
                    "template": {
                      "parameters": {
                        "rgName": {
                          "type": "String"
                        },
                        "ddosRegion": {
                          "type": "String"
                        },
                        "ddosname": {
                          "type": "String"
                        }
                      },
                      "contentVersion": "1.0.0.0",
                      "resources": [
                        {
                          "type": "Microsoft.Resources/resourceGroups",
                          "properties": {},
                          "location": "[deployment().location]",
                          "name": "[parameters('rgName')]",
                          "apiVersion": "2018-05-01T00:00:00Z"
                        },
                        {
                          "resourceGroup": "[parameters('rgName')]",
                          "type": "Microsoft.Resources/deployments",
                          "properties": {
                            "mode": "Incremental",
                            "template": {
                              "parameters": {},
                              "contentVersion": "1.0.0.0",
                              "resources": [
                                {
                                  "type": "Microsoft.Network/ddosProtectionPlans",
                                  "properties": {},
                                  "location": "[parameters('ddosRegion')]",
                                  "name": "[parameters('ddosName')]",
                                  "apiVersion": "2019-12-01T00:00:00Z"
                                }
                              ],
                              "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
                              "outputs": {}
                            }
                          },
                          "name": "ddosprotection",
                          "apiVersion": "2018-05-01T00:00:00Z",
                          "dependsOn": [
                            "[resourceId('Microsoft.Resources/resourceGroups/', parameters('rgName'))]"
                          ]
                        }
                      ],
                      "$schema": "http://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json",
                      "outputs": {}
                    }
                  },
                  "location": "northeurope"
                },
                "resourceGroupName": "[parameters('rgName')]",
                "deploymentScope": "Subscription",
                "existenceScope": "ResourceGroup"
              }
            },
            "if": {
              "allOf": [
                {
                  "field": "type",
                  "equals": "Microsoft.Resources/subscriptions"
                }
              ]
            }
          },
          "mode": "All"
        }
      }
    }
  }
}
